&НаСервере
Функция ПодготовитьПараметрыОтчетаНаСервере()
	
	// Конец дня периода находим только в том случае, если значение заполнено.
	// Т.к. если конец дня получать всегда то СДК будет строить отчёт по концу дня пустой даты(0001.01.01 23:59:59).
	// А в этом случае дата будет считаться пустой и передаваться в СКД не будет.
	Если ЗначениеЗаполнено(Отчет.КонецПериода) Тогда
		КонецПериода = КонецДня(Отчет.КонецПериода);
	Иначе
		КонецПериода = Отчет.КонецПериода;
	КонецЕсли;
	
	ПараметрыОтчета = Новый Структура;
	ПараметрыОтчета.Вставить("Организация"                      , Организация);
	ПараметрыОтчета.Вставить("ВключатьОбособленныеПодразделения", Ложь);
	ПараметрыОтчета.Вставить("НачалоПериода"                    , НачалоДня(Отчет.НачалоПериода));
	ПараметрыОтчета.Вставить("КонецПериода"                     , КонецПериода);
	ПараметрыОтчета.Вставить("РазмещениеДополнительныхПолей"    , Отчет.РазмещениеДополнительныхПолей);
	ПараметрыОтчета.Вставить("Группировка"                      , Отчет.Группировка.Выгрузить());
	ПараметрыОтчета.Вставить("ДополнительныеПоля"               , Отчет.ДополнительныеПоля.Выгрузить());
	ПараметрыОтчета.Вставить("РежимРасшифровки"                 , Отчет.РежимРасшифровки);
	ПараметрыОтчета.Вставить("ВыводитьЗаголовок"                , ВыводитьЗаголовок);
	ПараметрыОтчета.Вставить("ВыводитьПодвал"                   , ВыводитьПодвал);
	ПараметрыОтчета.Вставить("ДанныеРасшифровки"                , ДанныеРасшифровки);
	ПараметрыОтчета.Вставить("МакетОформления"                  , МакетОформления);
	ПараметрыОтчета.Вставить("СхемаКомпоновкиДанных"            , ПолучитьИзВременногоХранилища(СхемаКомпоновкиДанных));
	ПараметрыОтчета.Вставить("ИдентификаторОтчета"              , "ГП_УПЖКХ_СверкаСуммОплатВБлокеЖКХиБППоКонтрагентам");
	ПараметрыОтчета.Вставить("НастройкиКомпоновкиДанных"        , Отчет.КомпоновщикНастроек.ПолучитьНастройки());
	
	// Передаем параметр только в случае, если нам нужны только контрагенты которые связаны с лицевыми счетами.
	Если УчитыватьВсеОплаты = 1 Тогда
		ПараметрыОтчета.Вставить("ВсеОплаты"                    , Истина);
	КонецЕсли;
	
	Возврат ПараметрыОтчета;
	
КонецФункции

